<?xml version="1.0" encoding="UTF-8"?>
<psx>
	<sample path="/api/posts" method="GET">
        <response status-code="200" lang="json"><![CDATA[{
    "entry": [
        {
            "id": 4,
            "author": "admin",
            "content": "Lorem ipsum dolor sit amet, consetetur sadipscing [...]",
            "title": "and here some content",
            "status": "publish",
            "date": "2014-11-30T18:01:26+00:00",
            "modified": "2014-11-30T18:01:26+00:00"
        }
    ]
}
]]></response>
    </sample>
	<sample path="/api/posts" method="POST">
        <request lang="json"><![CDATA[{
    "title": "foo",
    "content": "lorem <b>ipsum</b>",
    "status": "publish"
}
]]></request>
        <response status-code="201" lang="json"><![CDATA[{
    "success": true,
    "message": "Create successful"
}
]]></response>
    </sample>
    <sample path="/api/posts/:id" method="GET">
        <response status-code="200" lang="json"><![CDATA[{
    "id": 9,
    "author": "admin",
    "content": "foobar",
    "title": "foobar",
    "status": "publish",
    "date": "2014-12-10T20:43:14+00:00",
    "modified": "-0001-11-30T00:00:00+00:00"
}
]]></response>
    </sample>
    <sample path="/api/posts/:id" method="PUT">
        <request lang="json"><![CDATA[{
    "id": 10,
    "status": "trash"
}
]]></request>
        <response status-code="200" lang="json"><![CDATA[{
    "success": true,
    "message": "Update successful"
}
]]></response>
    </sample>
    <sample path="/api/posts/:id" method="DELETE">
        <response status-code="200" lang="json"><![CDATA[{
    "success": true,
    "message": "Delete successful"
}
]]></response>
    </sample>
</psx>
